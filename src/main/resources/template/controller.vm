package ${package};

import ${model};
import ${service};
import ${responseModel};
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.*;

/**
 * @description: 控制层
 */
@RestController
@RequestMapping("${baseUrl}")
public class ${simpleModel}Controller {

    private static final Logger logger = LoggerFactory.getLogger(${simpleModel}Controller.class);

    @Autowired
    private ${simpleService} ${simpleServiceV};

    /**
     * 添加
     *
     * @param record
     */
    @PostMapping("/")
    public ${SimplResponseModel} add(@RequestBody ${simpleModel} record){
        logger.info("添加操作,[record] => {}", record);
        int i = this.${simpleServiceV}.add(record);
        return i==0? ${SimplResponseModel}.error():${SimplResponseModel}.success();
    }

    /**
     * 修改
     *
     * @param record
     */
    @PutMapping("/")
    public ${SimplResponseModel} update(@RequestBody ${simpleModel} record){
        logger.info("修改操作,[record] => {}", record);
        int i = this.${simpleServiceV}.update(record);
        return i == 0 ? ${SimplResponseModel}.error() : ${SimplResponseModel}.success();
    }

    /**
     * 真实删除
     *
     * @param id
     * @return
     */
    @DeleteMapping("{id}")
    public ${SimplResponseModel} delete(@PathVariable("id") String id){
        logger.info("删除【{}】操作,[id] => {}", "${simpleModel}", id);
        int i = this.${simpleServiceV}.delete(id);
        return i == 0 ? ${SimplResponseModel}.error() : ${SimplResponseModel}.success();
    }

    /**
     * 根据Id查询
     *
     * @param id
     * @return
     */
    @GetMapping("{id}")
    public ${SimplResponseModel} getById(@PathVariable("id") String id){
        logger.info("根据Id查询【{}】操作,[id] => {}", "${simpleModel}", id);
        ${simpleModel} record = this.${simpleServiceV}.selectById(id);
        return ${SimplResponseModel}.success(record);
    }

    /**
    * 分页查询
    *
    * @param record
    * @return
    */
    @GetMapping("/page")
    public ${SimplResponseModel} page(@ModelAttribute ${simpleModel} record){
        logger.info("进行分页查询操作，[record] => {}", record);
        return ${SimplResponseModel}.success(this.${simpleServiceV}.selectByPage(record));
    }

    /**
    * 全量查询列表
    *
    * @param record
    * @return
    */
    @GetMapping("/")
    public ${SimplResponseModel} list(@ModelAttribute ${simpleModel} record){
        logger.info("进行全量查询操作，[record] => {}", record);
        return ${SimplResponseModel}.success(this.${simpleServiceV}.selectList(record));
    }

}
